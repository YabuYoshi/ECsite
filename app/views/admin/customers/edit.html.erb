<h2><%= current_customer.last_name %><%= current_customer.first_name %>さんの会員情報編集</h2>
<%= form_with model: @customer, url: admin_customer_path, method: :patch do |f| %>
  <label for="inputName">会員ID</label>
  <%= @customer_id %> <br />
  <label for="inputName">氏名</label>
  <%= f.text_field :last_name, autofocus: true, id:"inputName", placeholder:"姓"%>
  <%= f.text_field :first_name, autofocus: true, id:"inputName", placeholder:"名"%> <br />
  <label for="inputName">フリガナ</label>
  <%= f.text_field :last_name_kana, autofocus: true, id:"inputName", placeholder:"セイ"%>
  <%= f.text_field :first_name_kana, autofocus: true, id:"inputName", placeholder:"メイ"%> <br />
  <label for="inputName">郵便番号</label>
  <%= f.text_field :postal_code, autofocus: true, id:"inputName", placeholder:"郵便番号"%> <br />
  <label for="inputName">住所</label>
  <%= f.text_field :address, autofocus: true, id:"inputName", placeholder:"住所"%> <br />
  <label for="inputName">電話番号</label>
  <%= f.text_field :telephone_number, autofocus: true, id:"inputName", placeholder:"電話番号"%> <br />
  <label for="inputName">メールアドレス</label>
  <%= f.text_field :email, autofocus: true, id:"inputName", placeholder:"メールアドレス"%> <br />

  <%= f.submit "変更を保存",class:"btn btn-success" %>
<% end %>
