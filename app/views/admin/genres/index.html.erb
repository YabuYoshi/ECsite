<h2>ジャンル一覧・追加</h2>
<%= form_with model: @genre, url: admin_genres_path, method: :post do |f| %>
<h4>ジャンル名</h4>
<%= f.text_field :name %>
<%= f.submit '新規登録', class:"btn btn-success" %>
<% end %>

<% @genres.each do |genre| %>
<div>
  <p>
    ショップ名：<%= genre.name %>
    <%= link_to '編集する', edit_admin_genre_path(genre) %>
  </p>
</div>
<% end %>

