<h2>商品編集</h2>
<%= form_with model: @item, url: admin_item_path, method: :put do |f| %>
  <label for="inputImage">商品画像</label>
  <%= f.file_field :image, placeholder:"商品画像", accept: "image/*"%>

  <label for="inputName">商品名</label>
  <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"商品名"%>

  <label for="inputName">商品説明</label>
  <%= f.text_area :introduction, autofocus: true, id:"inputName", placeholder:"商品説明"%> <br />
  <label for="inputName">ジャンル</label>
  <%#= f.collection.select :genre_id, autofocus: true, id:"inputName", placeholder:"ジャンル"%> <br />
  <%= f.collection_select(:genre_id, Genre.all, :id, :name, prompt: "選択してください") %>
  <label for="inputName">税抜価格</label>
  <%= f.text_field :price, autofocus: true, id:"inputName", placeholder:"税抜価格"%> <br />
  <label for="inputName">販売ステータス</label>
  <%= f.radio_button :is_active, true %>
  <%= f.label :販売中, autofocus:true, id:"inputName",placeholder:"販売中"%>
  <%= f.radio_button :is_active, false %>
  <%= f.label :販売停止中, autofocus:false, id:"inputName",placeholder:"販売停止中"%> <br />

  <%= f.submit "編集内容を保存",class:"btn btn-success" %>
<% end %>
