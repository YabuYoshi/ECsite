<h2>会員一覧</h2>
<% @customers.each do |customer| %>
<div>
  <p>会員ID：<%= customer.id %></p>
  <%= link_to admin_customer_path(customer.id) do %>
  <p>
    氏名：<%= customer.last_name %><%= customer.first_name %>
  </p>
  <% end %>
  <p>メールアドレス：<%= customer.email %></p>
  <p>
    <% if customer.is_deleted == false %>
      ステータス: 有効
    <% else %>
      ステータス: 退会
    <% end %>
  </p>
</div>
<% end %>

<%= paginate @customers %>
