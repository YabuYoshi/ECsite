<h2>商品詳細</h2>
<table>
 <tbody>
   <tr>
     <td><%= image_tag @item.get_image(100,100) %></td>
   </tr>
  <tr>
   <td>商品名</td>
   <td><%= @item.name %></td>
  </tr>
  <tr>
   <td>商品説明</td>
   <td><%= @item.introduction %></td>
  </tr>
  <tr>
   <td>ジャンル</td>
   <td><%= @item.genre.name %></td>
  </tr>
  <tr>
   <td>
    税込価格 <br />
    (税抜価格)
   </td>
   <td><%= @item.with_tax_price %>(<%= @item.price %>)円</td>
  </tr>
  <tr>
    <% if @item.is_active == true %>
      <td>販売ステータス</td>
      <td>
        <p class="text-success">販売中</p>
      </td>
    <% else %>
      <td>販売ステータス</td>
      <td>
       <p class="text-secondary">販売停止中</p>
      </td>
    <% end %>
  </tr>
  <tr>
    <td><%= link_to "編集する", edit_admin_item_path(@item.id), class:"btn btn-success" %></td>
  </tr>
 </tbody>
</table>
