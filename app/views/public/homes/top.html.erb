<h2>新着商品</h2>
<table>
 <% @items.each do |item| %>
  <div>
   <%= link_to item_path(item.id) do %>
   <%= image_tag item.get_image(100,100) %>
   <% end %>
   <p>商品名：<%= item.name %></p>
   <p>￥<%= item.price %></p>
  </div>
 <% end %>

 <%= link_to "すべての商品を見る", items_path, class:"btn btn-success" %>
</table>
